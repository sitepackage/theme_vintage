<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
[%- include 'meta.tt' %]
[%- if settings.favicon_image_uri %]
<link rel="shortcut icon" type="image/x-icon" href="[% settings.favicon_image_uri %]" />
[%- end %]
[% 'style.css' | asset_uri | stylesheet_tag %]
[% 'jquery/fancybox/2/jquery.fancybox.css' | global_asset_uri | stylesheet_tag %]
[% 'jquery/markitup/markdown/style.css' | global_asset_uri | stylesheet_tag %]
[% 'jquery/jquery.min.js' | global_asset_uri | script_tag %]
[% 'jquery/fancybox/2/jquery.fancybox.pack.js' | global_asset_uri | script_tag %]
[% 'jquery/jquery.bxslider.min.js' | global_asset_uri | script_tag %]
[% content_for_header %]
</head>
<body>
  <script type="text/javascript" charset="utf-8">
    $j = jQuery.noConflict();
    // fancybox
    $j(document).ready(function() {
      $j(".fancybox a").fancybox();
    });
  </script>
<div id="outer_wrapper">
  <div id="header_wrapper">
    <div id="header">
      <div class="logo_wrapper">
        <a href="[% shop.uri %]">
          [%- if settings.logo_image_uri %]
          <span class="logo" style="background-image: url('[% settings.logo_image_uri %]')"></span>
          [%- else %]
          <span class="site_name">[% shop.name | html %]</span>
          <span class="site_slogan">[% shop.domain %]</span>
          [%- end %]
        </a>
      </div>

      <div class="header">        
        <div class="account_wrapper">
          [%- if !settings.form_login %]          
          <div class="account">
            [%- unless customer.is_logged_in %]
            <form action="[% uri_for('/customer/login', { 'to' => req.uri }) %]" method="post" name="login">
              <fieldset>
                <label for="login">[% 'Email' | loc %]:</label> <input type="text" class="text" name="login" id="login" />
                <label for="password">[% 'Password' | loc %]:</label> <input type="password" class="text" name="password" id="password" />
                <input type="submit" class="button" name="submit" value="[% 'login' | loc %]" />
              </fieldset>
            </form>
            [%- else %]
            <h2 class="topic2">[% customer.name | html %]</h2>
            <ul>
              [%- foreach link in customer.links %]
              <li>[% link.name | html | link_to (link.uri) %]</li>
              [%- end %]
            </ul>
            [%- end %]
            <div class="clear"></div>
          </div>
          [%- end %]
          [%- if  !settings.ecommerce_enabled %]           
          <div class="cart_status">
            <div class="widgets"></div>
            <a href="[% uri_for('/cart') %]" title="[% 'Shopping Cart' | loc %]">
              <span><strong>[% cart.total_quantity || 0 %]</strong> [% cart.total_quantity | pluralize ('item', 'items') | loc %]</span>
            </a>
            <div class="clear"></div>
          </div>
          [%- end %]          
        </div>

        [%- if linklists.${settings.linklist_nav}.links  %]
        <div class="nav">
          <ul>
            [%- foreach link in linklists.${settings.linklist_nav}.links %]
            <li class="[% 'last' if loop.last %]">[% link.name | html | link_to (link.uri, link.name) %]</li>
            [%- end %]
          </ul>
        </div>
        [%- else %]
        <div class="nav">
          <ul>
            [%- foreach link in linklists.main_menu.links %]
            <li class="[% 'last' if loop.last %]">[%  link.name | html | link_to (link.uri, link.name, link.target) %]</li>
            [%- end %]
          </ul>
        </div>
        [%- end %]         

          <div class="search_wrapper">
            <div class="search widgets">
              <form action="[% uri_for('/collection/all') %]" method="get" name="search" id="search">
                <fieldset>
                  <input type="text" class="text" name="q" />
                  <input type="submit" class="button" value="&nbsp;" />
                </fieldset>
              </form>
            </div>
          </div>
          <div class="clear"></div>
      </div>

    </div>
  </div>

  <div id="content_wrapper">
    <div class="content_wrapper">

      <div id="sidebar1">
        <div class="sidebar_wrapper">

          [%- if settings.stats_enabled %]
          <div class="sidebar stats">
            <span class="widgets"></span>
            <dl>
              <dt>[% 'Since' | loc %]</dt>
              <dd>[% shop.created_at | date ('%F') %]</dd>
              <dt>[% 'Visitors' | loc %]</dt>
              <dd>[% shop.visitor_count || 0 | commify %]</dd>
              <dt>[% 'Products' | loc %]</dt>
              <dd>[% shop.product_count || 0 | commify %]</dd>
            </dl>
            <div class="clear"></div>
          </div>
          [%- end %]
          
          [% '<span class="sidebar widgets signup"></span>' | link_to ('/customer/signup') if !customer.    is_logged_in%]
          
          [%- if linklists.${settings.linklist_sidebar1}.links  %]
          <div class="sidebar collection nav-left">
            <h2 class="topic2" title="[%- linklists.${settings.linklist_sidebar1}.name %]"><span class="bullet">[%- linklists.${settings.linklist_sidebar1}.name %]</span></h2>
              <div class="padding">                
                <ul >
                  [%- foreach link in linklists.${settings.linklist_sidebar1}.links %]
                  <li >[% link.name | html | link_to (link.uri, link.name) %]</li>
                  [%- end %]
                </ul>
            </div>              
          </div>
          [%- end %]          

          [%- if !settings.collection_enabled %]
          <div class="sidebar collection">
            <h2 class="topic2" title="[% 'Collections' | loc %]"><span class="bullet">[% 'Collections' | loc %]</span></h2>
            [%- if linklists.collections.links.size %]
            <ul>
              [%- foreach link in linklists.collections.links %]
              <li>[% link.name | html | link_to (link.uri) %]</li>
              [%- end %]
            </ul>
            [%- else %]
              คุณต้องเพิ่มคอลเลคชันสินค้าเข้าลิงค์ลิสต์แฮนเดิล "collections"
            [%- end %]
          </div>
          [%- end %]
          
          [%- if linklists.${settings.linklist_sidebar2}.links %]
          <div class="sidebar collection nav-left">
            <h2 class="topic2" title="[%- linklists.${settings.linklist_sidebar2}.name %]"><span class="bullet">[%- linklists.${settings.linklist_sidebar2}.name %]</span></h2>
              <div class="padding">                
                <ul >
                  [%- foreach link in linklists.${settings.linklist_sidebar2}.links %]
                  <li >[% link.name | html | link_to (link.uri, link.name) %]</li>
                  [%- end %]
                </ul>
            </div>   
          </div>
          [%- end %]          
          
          [%- if settings.type_style && collection.handle && collection.handle != 'all' %]
          <div class="sidebar type nav-left">     
            <h2 class="topic2" title="[% 'Browse by Type' | loc %]"><span class="bullet">[% 'Types' | loc %]</span></h2>
              [%- if !settings.type_style || settings.type_style == 1 %]
              <form action="[% req.url %]" method="get">
                <select name="type" class="select" onchange='location.href=this.form.type.options[this.form.type.selectedIndex].value;'>
                  <option value="[% collection.uri %]">- [% 'Any type' | loc %] -</option>
                  [%- foreach type in collection.types %]
                    <option value="[% uri_for ('/collection', collection.slug, {type = type}) %]" [% 'selected="selected"' if current_type == type %]>[% type | html %]</option>
                  [%- end %]
                </select>
              </form>
              [%- else %]
              <div class="padding">              
                <ul class="list">
                  [%- foreach type in collection.types %]
                    <li [% 'class="active"' if current_type == type %]>[% type | html | link_to uri_for ('/collection', collection.slug, {type = type}) %]</li>
                  [%- end %]
                </ul>
              </div>              
              [%- end %]
          </div>  
          [%- end %]          

          [%- if settings.brand_style && collection.handle && collection.handle != 'all' %]
          <div class="sidebar nav-left brand">
            <h2 class="topic2" title="[% 'Browse by Brand' | loc %]"><span class="bullet">[% 'Brands' | loc %]</span></h2>            
              [%- if !settings.brand_style || settings.brand_style == 1 %]
              <form action="[% req.url %]" method="get">
                <select name="brand" class="select" onchange='location.href=this.form.brand.options[this.form.brand.selectedIndex].value;'>
                  <option value="[% collection.uri %]">- [% 'Any brand' | loc %] -</option>
                  [%- foreach vendor in collection.vendors %]
                    <option value="[% uri_for ('/collection', collection.slug, {vendor = vendor}) %]" [% 'selected="selected"' if current_vendor == vendor %]>[% vendor | html %]</option>
                  [%- end %]
                </select>
              </form>
              [%- else %]
              <div class="padding">                      
                <ul>
                  [%- foreach vendor in collection.vendors %]
                    <li [% 'class="active"' if current_vendor == vendor %]>[% vendor | html | link_to uri_for ('/collection', collection.slug, {vendor = vendor}) %]</li>
                  [%- end %]
                </ul>
              </div>                
              [%- end %]
          </div>
          [%- end %]
          
          [%- if linklists.${settings.linklist_sidebar3}.links %]
          <div class="sidebar collection nav-left">
            <h2 class="topic2" title="[%- linklists.${settings.linklist_sidebar3}.name %]"><span class="bullet">[%- linklists.${settings.linklist_sidebar3}.name %]</span></h2>
              <div class="padding">                
                <ul >
                  [%- foreach link in linklists.${settings.linklist_sidebar3}.links %]
                  <li >[% link.name | html | link_to (link.uri, link.name) %]</li>
                  [%- end %]
                </ul>
            </div>   
          </div>
          [%- end %]          
          
          <div class="sidebar sep widgets"></div>

          <div class="banners_wrapper">
            <div class="sidebar">
              [% '<span class="banners shipping_list"></span>' | link_to settings.shipping_list_uri if settings.shipping_list_uri %]
              [% '<span class="banners contact"></span>' | link_to settings.contact_uri if settings.contact_uri %]
              [% '<span class="banners tracking"></span>' | link_to ('http://track.thailandpost.co.th', 'Thailand Post Track &amp; Trace', '_blank') if settings.thps_track_enabled %]
            </div>

            [%- if linklists.sidebar.links.size %]
            [%- foreach link in linklists.sidebar.links %]
            [%- next unless link.featured_image.src %]
            <span class="sidebar">[% link.featured_image.src | image_uri | image_tag | link_to (link.uri, link.name, link.target) %]</span>
            [%- end %]
            [%- end %]
          </div>

          [%- if settings.facebook_uri && settings.like_box_enabled %]
          <div class="sidebar facebook_like_box">
            <iframe src="http://www.facebook.com/plugins/likebox.php?href=[% settings.facebook_uri | uri %]&amp;width=200&amp;colorscheme=light&amp;border_color=%23554e15&amp;show_faces=[% settings.like_box_show_faces ? 'true' : 'false' %]&amp;stream=[% settings.like_box_show_stream ? 'true' : 'false' %]&amp;header=[% settings.like_box_show_header ? 'true' : 'false' %]&amp;height=[% settings.like_box_height ? settings.like_box_height : '556' %]" scrolling="no" frameborder="0" style="border:none; overflow:hidden; width:200px; height:[% settings.like_box_height ? settings.like_box_height : '556' %]px;"></iframe>
          </div>
          [%- end %]

          [%- if shop.dbd_account %]
          <div class="sidebar dbd c">
            <span>[% shop.dbd_account | seal_for_dbd %]</span>
          </div>
          [%- end %]

        </div>
      </div>

      <div id="main">
        <div class="highlight_wrapper">
          <div class="highlight">
            <ul id="highlight">
              [%- if linklists.${settings.linklist_highlight}.links.size || linklists.highlight.links.size %]
              [%- links = linklists.${settings.linklist_highlight}.links || linklists.highlight.links %]
              [%- foreach link in links %]
              [% next if !link.featured_image %]     
              <li>
                <a href="[% link.uri %]" title="[% link.name | html %]">
                  <span style="background-image: url('[% link.featured_image.src | image_uri %]')"></span>
                </a>
              </li>
              [%- end %]
              [%- else %]
              <li><span style="background-image: url('[% 'highlight_sample.jpg' | asset_uri %]')"></span></li>
              <li><span style="background-image: url('[% 'highlight_sample.jpg' | asset_uri %]')"></span></li>
              [%- end %]
            </ul>
            <script type="text/javascript" charset="utf-8">
            $j(function(){
              var slider = $j('#highlight').bxSlider({
                controls: false,
                displaySlideQty: 1,
                moveSlideQty: 1,
                pager: true,
                auto: true,
                pause: 6000
              });
            });
            </script>
          </div>
        </div>

        <div class="main">
          [% content %]
        </div>
      </div>
      <div class="clear"></div>

    </div>
  </div>

  <div id="footer_wrapper">
    <div id="footer">
      <div class="footer">
        <div class="nav">
          <ul>
            [%- foreach link in linklists.footer.links %]
            [%- link.name = link.name | html %]
            <li class="[% 'first' if loop.first %][% 'last' if loop.last %]">[%  link.name | link_to (link.uri, link.name, link.target) %]</li>
            [%- end %]
          </ul>
        </div>
        <div class="copyright">
          &copy; [% now | date ('%Y') %] [% shop.name | html %]. [% powered_by_link %].
        </div>
      </div>
      <div class="social">
        [% '<span class="widgets fb"></span>' | link_to (settings.facebook_uri, settings.facebook_uri, '_blank') if settings.facebook_uri %]
        [% '<span class="widgets tw"></span>' | link_to (settings.twitter_uri, settings.twitter_uri, '_blank') if settings.twitter_uri %]
        <div class="clear"></div>
      </div>
      <div class="clear"></div>
    </div>
  </div>
  [% content_for_footer %]
</div>
</body>
</html>
